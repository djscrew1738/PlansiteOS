# PlansiteOS Production Environment Variables
# Copy this file to .env.production and fill in your values

# =============================================================================
# DOMAIN & SSL (Required for public access)
# =============================================================================
DOMAIN=ctlplumbingllc.com
ADMIN_EMAIL=admin@ctlplumbingllc.com

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql+psycopg2://plansite:your-secure-database-password-here@postgres:5432/plansite

# =============================================================================
# REDIS (Cache & Queue)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# OBJECT STORAGE (MinIO)
# =============================================================================
MINIO_ROOT_USER=your-minio-admin-user
MINIO_ROOT_PASSWORD=your-secure-minio-password
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=your-minio-admin-user
S3_SECRET_KEY=your-secure-minio-password
S3_BUCKET=plansite-blueprints
S3_REGION=us-east-1
S3_SECURE=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# CORS origins (comma-separated for multiple domains)
CORS_ORIGIN=https://ctlplumbingllc.com,https://www.ctlplumbingllc.com

# Frontend API URL (must match your public domain)
VITE_API_BASE=https://ctlplumbingllc.com

# Upload limits
UPLOAD_MAX_BYTES=209715200
UPLOAD_RATE_LIMIT=10
UPLOAD_RATE_WINDOW_SECONDS=60

# =============================================================================
# AI SERVICES (Required for blueprint analysis)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# =============================================================================
# OPTIONAL: NOTIFICATIONS
# =============================================================================
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# OPTIONAL: MONITORING
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn
